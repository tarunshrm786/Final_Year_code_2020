<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/park1"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="100dp"
        android:layout_height="60dp"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="36dp"
        android:fontFamily="bold"
        android:textColor="@color/greenGradient"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_button"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/email_log"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Email Address"
        android:textColor="@color/colorBlack"
        android:background="@drawable/rounded_button"
        android:textColorHint="@color/colorBlack"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:padding="10dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/passwordlog"
        android:hint="Password"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        />


    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:hint="Enter your Name"
         />

    <EditText
        android:id="@+id/contact"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:hint="Enter your Contact No."
        />


    <EditText
        android:id="@+id/dob"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="410dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:hint="Enter your D.O.B"
        />

    <Button
        android:id="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/roundbtn"
        android:textSize="24dp"
        android:text="Register"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/btn_registers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="80dp"
        android:background="@null"
        android:text="Already User? click here"
        android:textColor="@color/greenGradient"
        android:padding="20dp"
        android:fontFamily="sans-serif"
        android:onClick="login"
        />

</RelativeLayout>